<h1>Director #<%= @the_director.id %> detail</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_director.name %></dd>

  <dt>Date of birth</dt>
  <dd><%= @the_director.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_director.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_director.image %>" width="200"></dd>

  <dt>Created at</dt>
  <dd><img src="<%= @the_director.created_at %>" width="200"></dd>

  <dt>Updated at</dt>
  <dd><img src="<%= @the_director.updated_at %>" width="200"></dd>
</dl>
